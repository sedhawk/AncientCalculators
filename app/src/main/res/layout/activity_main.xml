        <EditText
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="doubled"
            android:textAlignment="center"
            android:textSize="14sp" />


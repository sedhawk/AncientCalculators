        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r3">

        <Switch
            android:id="@+id/b4"
            android:layout_width="50dp"
